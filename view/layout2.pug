doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="document-state" content="Dynamic")
        link(rel="shortcut icon" href="/favicon.png")
        link(rel="stylesheet" href="/css/common.css")
        link(href="/fa/css/all.min.css" rel="stylesheet")
        style.
            body {
                display: grid;
                height: 100vh;
                grid-template-columns: 250px auto;
                background: #f7f8fc;
            }

            body > .header {
                background: #363740;
                overflow: hidden;
            }

            .title {
                display: flex;
                justify-content: space-evenly;
                height: 70px;
                color: #a4a6b3;
                font-weight: lighter;
                align-items: center;;
                margin: 1rem;
            }

            .title img {
                max-width: 40px;
                max-height: 40px;
            }

            .tab {
                display: flex;
                color: #a4a6b3;
                padding: 1rem;
                line-height: 20px;
                letter-spacing: 0.4px;
                cursor: pointer;
                justify-items: center;
            }

            .tab i {
                margin: auto 0;
            }

            .tab span {
                margin-left: 1rem;
            }

            .tab.active {
                border-left: 3px solid #dde2ff;
                background: #3e4049;
                color: #d3d8f4;
            }

            .content-body {
                overflow: auto;
                width: 100%;
                height: 100%;
                padding: 1rem;
            }

            .content-body > .header {
                margin-bottom: 1rem;
            }

            .content-body > .header h2 {
                color: #252733;
                letter-spacing: 0.3px;
                font-weight: bold;
                margin: 1rem;
            }

            .content-body > .header, .lefter {
                height: 70px;
                align-items: center;
                display: flex;
                justify-content: space-between;
            }

            .profile {
                height: 100%;
                display: flex;
                align-items: center;
                font-weight: bold;
            }

            .profile img {
                max-width: 50px;
                max-height: 50px;
                border-radius: 50%;
                margin-left: 1rem;
                background: #dfe0eb;
                border: 1px solid #dfe0eb;
            }

            .lefter > *:hover {
                background: #ddd;
            }

            .interactive {
                transition: all .2s ease-out;
                cursor: pointer;
                padding: 1rem;
                border-radius: 8px;
                margin: .5rem;
            }

            .interactive:hover {
                transform: translateY(-3px);
            }

        block head
    body
        .header
            .title
                img(src="img/logo.png")
                h3 ЛолКекЧебурек
            -
                const tabs = [
                    { icon: "fas fa-chart-pie", label: "Обзор", isActive: true },
                    { icon: "fas fa-ticket-alt", label: "Обращения" },
                    { icon: "fas fa-chart-bar", label: "Аналитика" },
                    { icon: "fas fa-clipboard", label: "Отчёты" },
                    { icon: "fas fa-user-cog", label: "Управление персоналом" },
                    { icon: "fas fa-book", label: "Список больниц" }
                ];
            for tab in tabs
                div(class=tab.isActive?"tab active":"tab")
                    i(class=tab.icon)
                    span=tab.label
            hr(style="border:none;color:gray;background-color:gray;height:1px;margin:1rem 1rem;")
            .tab
                i(class="fas fa-cog")
                span Настройки
            a.tab(href="/auth?logout=1")
                i(class="fas fa-sign-out-alt")
                span Выход
        .content-body
            .header
                block header
                .lefter
                    i.interactive(class="fas fa-search fa-lg")
                    i.interactive(class="fas fa-bell fa-lg")
                    .profile.interactive
                        span Патрик
                        img(src="img/patrik.webp")
            block body
